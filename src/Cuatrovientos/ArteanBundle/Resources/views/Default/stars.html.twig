                  <div class="inner cover mainpanel" id="candidatos" style="margin-top: 75em">
                      
                   <h2 class="cover-heading">Candidat@s</h2>
                   {% image '@CuatrovientosArteanBundle/Resources/public/img/astronaut.png' %}
                        <img src="{{ asset_url }}"  alt="darest candidates" title="fearless candidate"/>
                    {% endimage %}
                    <p class="lead">Entra en tu perfil o crea una cuenta en Artean indicando tu email</p>
                    <form method="post" name="applicant" action="{{ path('cuatrovientos_artean_applicant_signin_save') }}">
        <div id="applicant_sign_in">
            <div class="col-lg-offset-3 col-lg-6">
                <div class="input-group">
                    <input class="form-control" type="email" id="applicant_sign_in_email" name="applicant_sign_in[email]" required="required" placeholder="tudirección@decorreo" />
                    <span class="input-group-btn">
                        <button class="btn btn-secondary" type="button" onclick="forms.applicant.submit()" >Entrar</button>
                    </span>
                </div>
            </div>
        </div>
