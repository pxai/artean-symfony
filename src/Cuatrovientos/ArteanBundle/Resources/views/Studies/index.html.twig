{% extends "CuatrovientosArteanBundle:Default:layout.html.twig" %}
    {% block title %}Artean :: Studies : índice{% endblock %}
    {% block body %}
        <h2><i class="fa fa-industry" aria-hidden="true"></i> Estudios({{ total }}) </h2>
        <div><a href="{{ path('cuatrovientos_artean_studies') }}">{% trans %}Recargar{% endtrans %}</a>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#searchformModal" data-whatever="searchStudies">
                <i class="fa fa-search" aria-hidden="true"></i> Buscar
            </button>

            <a href="{{ path('cuatrovientos_artean_studies_new') }}" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i> Nuevos estudios</a> </div>
        <div id="searchformModal" style="display:none";  class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">

            {% include "CuatrovientosArteanBundle:Studies:search.html.twig" %}
        </div>
<div class="table-responsive">
  <table class="table .table-condensed">
     <div id='studiess'>
         <tr><th>Id</th><th>Nombre</th><th>Descripción</th><th></th></tr>
        {% for study in studies %}
            {% include "CuatrovientosArteanBundle:Studies:studies.html.twig" %}
        {% endfor %}
    </div>
  </table>
</div>

{% endblock %}