{% extends "CuatrovientosArteanBundle:Default:layout.html.twig" %}
    {% block title %}Artean :: Centros : índice{% endblock %}
    {% block body %}
        <h2><i class="fa fa-university" aria-hidden="true"></i> Centros de enseñanza({{ total }}) </h2>
        <div><a href="{{ path('cuatrovientos_artean_center') }}">{% trans %}Recargar{% endtrans %}</a>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#searchformModal" data-whatever="searchCenter">
                <i class="fa fa-search" aria-hidden="true"></i> Buscar
            </button>

            <a href="{{ path('cuatrovientos_artean_center_new') }}" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i> Nuevo centro</a> </div>
        <div id="searchformModal" style="display:none";  class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">

            {% include "CuatrovientosArteanBundle:Center:search.html.twig" %}
        </div>
<div class="table-responsive">
  <table class="table .table-condensed">
     <div id='centers'>
         <tr><th>Id</th><th>Nombre</th><th>Descripción</th><th></th></tr>
        {% for center in centers %}
            {% include "CuatrovientosArteanBundle:Center:center.html.twig" %}
        {% endfor %}
    </div>
  </table>
</div>

{% endblock %}